        xmlns:local="clr-namespace:TruTexts__pty__Company_Data_Base"
        mc:Ignorable="d"
        Title="MainPage" Height="450" Width="665">
    <Grid>
        <Button Name="btnUpdate" Content="Update" HorizontalAlignment="Left" Margin="375,17,0,0" VerticalAlignment="Top" Width="59" Height="21"/>
        <Button Name="btnAddCustomer" Content="Add Customer" HorizontalAlignment="Left" Margin="20,359,0,0" VerticalAlignment="Top" Width="92" Height="22" Click="btnAddCustomer_Click"/>
