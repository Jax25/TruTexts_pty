        <TextBlock Name="tbselecttable" HorizontalAlignment="Left" Margin="16,70,0,0" TextWrapping="Wrap" Text="Select the Table" VerticalAlignment="Top" Width="120"/>
        <DataGrid Name="dgTableData" HorizontalAlignment="Left" Height="225" Margin="16,117,0,0" VerticalAlignment="Top" Width="631"/>
        <Button x:Name="btnAddAdmin" Content="Add Admin" HorizontalAlignment="Left" Margin="20,388,0,0" VerticalAlignment="Top" Width="92" Height="22" Click="btnAddAdmin_Click"/>
